<mvc:View
  controllerName="coffee-frontend.controller.Profile"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  displayBlock="true">

  <Page title="Profile">
    <customHeader>
      <Bar id="navbarContainer2" />
    </customHeader>

    <content>
      <VBox class="profileContainer" alignItems="Center" width="100%">

        <!-- Profile Image + Name -->
        <VBox alignItems="Center" class="profileHeader">
          <f:Avatar displaySize="L" src="https://cdn-icons-png.flaticon.com/512/847/847969.png" />
          <Text text="{user>/displayName}" class="profileName" />
          <Text text="{user>/email}" class="profileSubtitle" />
          <Text text="Coffee Enthusiast" class="profileSubtitle2" />
        </VBox>

        <!-- Info List -->
        <List inset="true" class="profileList" itemPress=".onListItemPress">
          <StandardListItem title="Transaction History" type="Navigation" info="(7)" />
          <StandardListItem title="Personal Coffee Consumption" type="Navigation" />
          <StandardListItem title="Payment Method" type="Navigation" />
          <StandardListItem title="Data Privacy" type="Navigation" />
          <StandardListItem title="Feedback" type="Navigation" />
        </List>

        <!-- Sign Out -->
        <Button text="Sign Out" type="Reject" class="signOutBtn" />

        <!-- Warning Text -->
        <Text text="Signing out may lead to loss of unsynced data." class="warningText" />

        <!-- Footer -->
        <Text text="Coffeex, version 1.3.14, All rights reserved" class="footerText" />
      </VBox>
    </content>
  </Page>
</mvc:View>
