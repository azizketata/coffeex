{
  "build": {
    "target": "gen",
    "tasks": [
      {
        "for": "hana",
        "src": "db",
        "options": {
          "model": ["db", "srv", "jobs"]
        }
      },
      {
        "for": "node-cf",
        "src": "srv",
        "options": {
          "model": ["db", "srv", "jobs"]
        }
      }
    ]
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
  "requires": {
    "db": {
      "kind": "sqlite",
      "credentials": {
        "database": ":memory:"
      },
      "[production]": {
        "kind": "hana"
      }
    },
    "auth": {
      "kind": "mocked",
      "[production]": {
        "kind": "xsuaa"
      }
    },
    "messaging": {
      "kind": "local-messaging",
      "[production]": {
        "kind": "event-mesh"
      }
    },
    "alerting": {
      "kind": "null",
      "[production]": {
        "kind": "alert-notification"
      }
    }
  },
  "profiles": ["with-mocks"],
  "features": {
    "serve_on_root": true
  }
} 