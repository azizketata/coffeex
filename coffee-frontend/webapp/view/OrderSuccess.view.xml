<mvc:View
  controllerName="coffee-frontend.controller.OrderSuccess"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  displayBlock="true">

  <Page showHeader="false" class="orderSuccessPage">

    <content>
      <VBox alignItems="Center" justifyContent="Center" class="orderSuccessContainer" width="100%">

        <Text text="CoffeeX" class="orderTitle" />
        <Text text="Your coffee is ready soon... ☕" class="orderSubtitle" />

        <!-- Balance Display -->
        <Text text="8.93 €" class="balanceText" />
        <Text text="Updated Balance" class="balanceLabel" />

        <!-- 🏠 Home Button -->
        <Button
          icon="sap-icon://home"
          text="Back to Home"
          press=".onNavHome"
          class="homeButton"
        />

        <!-- Footer -->
        <Link text="View our Terms of Service" class="termsLink" href="#" />

      </VBox>
    </content>

  </Page>
</mvc:View>
