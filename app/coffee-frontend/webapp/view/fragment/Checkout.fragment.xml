<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="checkoutDialog"
    class="checkoutDialogBottomSheet"
    showHeader="false"
    draggable="false"
    resizable="false"
    stretch="true"
    contentHeight="auto"
    contentWidth="100%">

    <VBox>
      <Text text="Checkout" class="checkoutDialogTitle" />

      <HBox class="checkoutItemRow">
        <Text text="1 x {selectedTx/machineId}" />
        <Text text="{= 'â‚¬ ' + ${selectedTx/price} }" class="checkoutPrice" />
      </HBox>

      <HBox class="checkoutButtonBar">
        <Button text="Cancel" type="Transparent" class="checkoutBtn" press=".onCloseCheckoutDialog" />
        <Button text="Use Balance" type="Emphasized" class="checkoutBtn" press=".onUseBalance" />
      </HBox>
    </VBox>
  </Dialog>
</core:FragmentDefinition>
