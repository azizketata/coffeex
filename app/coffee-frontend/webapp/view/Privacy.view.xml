<mvc:View
  controllerName="coffee-frontend.controller.Privacy"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  displayBlock="true">

  <Page showHeader="false" backgroundDesign="Solid">
    <content>
      <VBox width="100%" alignItems="Center" class="privacyContainer" justifyContent="SpaceBetween">
        
        <!-- Top bar with Cancel -->
        <HBox width="100%" justifyContent="Start" class="privacyTopBar">
          <Link text="Cancel" press=".onCancel" class="privacyCancelLink" />
        </HBox>

        <!-- Main Content -->
        <VBox alignItems="Center" class="privacyContent">
          <Text text="Data Privacy" class="privacyTitle" />
          <Text text="Detailed text about how data privacy pertains to this app and why it is important for the user to enable this functionality." class="privacyDescription" textAlign="Center" />
          <Link text="Learn more about Data Privacy" class="privacyLearnMore" />
        </VBox>

        <!-- Bottom Buttons -->
        <HBox width="100%" justifyContent="SpaceAround" class="privacyButtons">
          <Button text="Deny" type="Reject" class="denyBtn"/>
          <Button text="Allow" type="Accept" class="allowBtn"/>
        </HBox>

      </VBox>
    </content>
  </Page>
</mvc:View>
