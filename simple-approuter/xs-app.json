{
  "welcomeFile": "/frontend/webapp/index.html",
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/logout",
    "logoutPage": "/"
  },
  "routes": [
    {
      "source": "^/login$",
      "target": "/webapp/index.html",
      "localDir": "frontend",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/backend/(.*)$",
      "target": "/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/frontend/(.*)$",
      "target": "/$1",
      "localDir": "frontend",
      "authenticationType": "none"
    },
    {
      "source": "^/$",
      "target": "/webapp/index.html",
      "localDir": "frontend",
      "authenticationType": "none"
    }
  ]
} 